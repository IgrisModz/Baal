<UserControl x:Class="Baal.Views.EbootsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             mc:Ignorable="d"
             dialog:DialogParticipation.Register="{Binding}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button}">
            <Setter Property="mah:ControlsHelper.ContentCharacterCasing" Value="Normal"/>
            <Setter Property="mah:ControlsHelper.CornerRadius" Value="0"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}">
            <Setter Property="Margin" Value="3"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchEBOOTTextBox" Margin="3" Width="200" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Search"
                 Style="{StaticResource MahApps.Styles.TextBox.Search}" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        <ListBox x:Name="EBOOTSListBox" Margin="3" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" SelectionMode="Extended"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding EbootsCollection}" SelectedItem="{Binding SelectedEboot}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource MahApps.Styles.ListBoxItem}">
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Source="{Binding FileThumbnail}" Width="40" Height="40" Stretch="Uniform" Margin="15" Cursor="Hand"/>
                        <TextBlock Margin="3" Text="{Binding Mode}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}" BasedOn="{StaticResource MahApps.Styles.GroupItem.DataGrid}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Border Background="Black" Padding="2">
                                                <TextBlock Text="{Binding Name}"/>
                                            </Border>
                                            <ItemsPresenter Grid.Row="1"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListBox.GroupStyle>
        </ListBox>
        <Button x:Name="RefreshEBOOTSButton" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Command="{Binding GetEBOOTSCommand}">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterialDesign x:Name="RefreshEBOOTSButtonIcon" Kind="Refresh"/>
                <TextBlock x:Name="RefreshEBOOTSButtonText" Margin="3 0 0 0" Text="Refresh list"/>
            </StackPanel>
        </Button>
        <TextBox x:Name="EBOOTPathTextBox" Grid.Column="0" Grid.Row="3"
                 mah:TextBoxHelper.Watermark="Drop your EBOOT file here ..."
                 Text="{Binding EBOOTPath, UpdateSourceTrigger=PropertyChanged}"
                 AllowDrop="True" PreviewDragOver="TextBox_PreviewDragOver" Drop="TextBox_Drop"/>
        <Button x:Name="BrowseEBOOTButton" Grid.Column="1" Grid.Row="3" Content="...." Command="{Binding BrowseEBOOTCommand}"/>
        <UniformGrid Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Columns="2">
            <UniformGrid Columns="2">
                <ComboBox x:Name="GameListComboBox" Margin="3" ItemsSource="{Binding EBOOTGameList}" SelectedItem="{Binding SelectedGame}"/>
                <ComboBox x:Name="ModeListComboBox" Margin="3" ItemsSource="{Binding EBOOTModeList}" SelectedItem="{Binding SelectedMode}"/>
            </UniformGrid>
            <Button x:Name="AddSPRXButton" Command="{Binding AddEBOOTCommand}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterialDesign x:Name="AddSPRXButtonIcon" Kind="LibraryAdd"/>
                    <TextBlock x:Name="AddSPRXButtonText" Margin="3 0 0 0" Text="Add file to library"/>
                </StackPanel>
            </Button>
        </UniformGrid>
        <Button x:Name="DeleteEBOOTButton" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Command="{Binding DeleteEBOOTCommand}">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterialDesign x:Name="DeleteEBOOTButtonIcon" Kind="Delete"/>
                <TextBlock x:Name="DeleteEBOOTButtonText" Margin="3 0 0 0" Text="Delete eboot"/>
            </StackPanel>
        </Button>
        <UniformGrid Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Columns="2">
            <DockPanel>
                <Label x:Name="DestinationEBOOTLabel" Margin="3" Content="Destination:"/>
                <TextBox Text="{Binding EBOOTDestinationPath, UpdateSourceTrigger=PropertyChanged}"/>
            </DockPanel>
            <Button x:Name="UploadEBOOTButton" Command="{Binding UploadEBOOTCommand}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterialDesign x:Name="UploadEBOOTButtonIcon" Kind="Send"/>
                    <TextBlock x:Name="UploadEBOOTButtonText" Margin="3 0 0 0" Text="Upload eboot"/>
                </StackPanel>
            </Button>
        </UniformGrid>
    </Grid>
</UserControl>
